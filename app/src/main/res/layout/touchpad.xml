<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView
        android:id="@+id/touchView"
        android:background="#bf2288ff"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/left_click"
        android:layout_alignParentBottom="true" />
    <TextView
        android:id="@+id/left_click"
        android:background="#44000000"
        android:layout_width="50dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/right_click"
        android:background="#66000000"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/left_click"
        android:layout_alignStart="@+id/left_click"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/left_click" />
</RelativeLayout>